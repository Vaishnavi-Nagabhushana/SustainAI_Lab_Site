const courses = [
  {
    term: 'Fall 2025 (upcoming)',
    course: 'Hardware Aware Deep Learning',
    institution: 'IIT Guwahati',
  },
  {
    term: 'Fall 2025 (upcoming)',
    course: 'Neuromorphic AI',
    institution: 'IIT Guwahati',
  },
  {
    term: 'Summer 2025, Summer 2024',
    course: 'Introduction to R Programming',
    institution: 'Coursera',
  },
  {
    term: 'Spring 2025',
    course: 'Deep Learning',
    institution: 'IIT Guwahati',
  },
  {
    term: 'Spring 2025, Spring 2024',
    course: 'Data Mining',
    institution: 'IIT Guwahati',
  },
  {
    term: 'Spring 2025',
    course: 'Data Mining & Warehousing',
    institution: 'Coursera',
  },
  {
    term: 'Fall 2024',
    course: 'Machine Learning',
    institution: 'IIT Guwahati',
  },
  {
    term: 'Fall 2024',
    course: 'Machine Learning Lab',
    institution: 'IIT Guwahati',
  },
  {
    term: 'Spring 2024',
    course: 'Data Visualization Lab',
    institution: 'IIT Guwahati',
  },
  {
    term: 'Summer 2023',
    course: 'Programming for AI',
    institution: 'IIT Hyderabad',
  },
  {
    term: 'Spring 2023',
    course: 'Neuromorphic AI',
    institution: 'IIT Hyderabad',
  },
]
---

<BaseLayout title="Teaching | SustainAI Lab">
  <article class="max-w-4xl mx-auto px-4 py-8 sm:py-12">
    <section>
      <h1 class="text-2xl font-semibold text-indigo-700 dark:text-indigo-400 mb-5">Courses Taught</h1>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        {
          courses.map(({ term, course, institution }) => (
            <article class="bg-white dark:bg-zinc-800/60 border border-gray-200 dark:border-zinc-600 shadow-md dark:shadow-md p-5 rounded-md backdrop-blur-sm transition-shadow duration-300 flex flex-col justify-between min-h-[120px]">
              <div>
                <p class="text-xs font-semibold text-indigo-600 dark:text-indigo-400 mb-2">{term}</p>
                <h2 class="text-sm font-semibold text-gray-900 dark:text-gray-100">{course}</h2>
              </div>
              <p class="italic text-gray-600 dark:text-gray-300 text-xs mt-4">{institution}</p>
            </article>
          ))
        }
      </div>
    </section>
  </article>
</BaseLayout>
